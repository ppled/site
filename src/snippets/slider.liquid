{% assign slider_enabled = true %}
<div class="flexslider loading">

    <ul class="slides">
        {% for i in (1..6) %}
            {% capture slide %}slide_{{ i }}{% endcapture %}
            {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
            {% capture slide_img_lg %}slide_{{ i }}_lg.jpg{% endcapture %}
            {% capture slide_img_sm %}slide_{{ i }}_sm.jpg{% endcapture %}
            {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
            {% if settings[slide] %}
                <li>
                    <a href="{{ settings[slide_link] }}" class="slide-link">
                        {{ slide_img_lg | asset_url | img_tag: settings[slide_alt], 'slide-image-lg' }}
                        {{ slide_img_sm | asset_url | img_tag: settings[slide_alt], 'slide-image-sm' }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>

    <div class="height-fill">
      <span class="load-pulse"></span>
    </div>

    <ul class="flex-direction-nav">
      <li class="flex-nav-prev">
        <a class="fa flex-prev" href="#">
          <span class="sr-only">Previous</span>
        </a>
      </li>
      <li class="flex-nav-next">
        <a class="fa flex-next" href="#">
          <span class="sr-only">Next</span>
        </a>
      </li>
    </ul>
</div>
